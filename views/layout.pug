doctype html

mixin item(title, url)
  li(class="item_list")
    a(href=url class= path == url ? "item active" : "item" )=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul 
        +item("Strona główna", "/") 
        +item("Aktualności", "/news") 
        +item("Ankieta", "/quiz") 
        +item("Admin", "/admin") 
    
    block content